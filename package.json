{
    "name": "gaplint",
    "displayName": "gaplint linter",
    "description": "%extension.description%",
    "version": "0.1.0",
    "preview": true,
    "serverInfo": {
        "name": "gaplint linter",
        "module": "gaplint"
    },
    "publisher": "reiniscirpons",
    "license": "MIT",
    "homepage": "https://github.com/reiniscirpons/gaplint-vscode",
    "repository": {
        "type": "git",
        "url": "https://github.com/reiniscirpons/gaplint-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/reiniscirpons/gaplint-vscode/issues"
    },
    "icon": "logo/logo.png",
    "galleryBanner": {
        "color": "#88f",
        "theme": "light"
    },
    "keywords": [
        "gap",
        "gap-system",
        "gaplint"
    ],
    "engines": {
        "vscode": "^1.78.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "extensionDependencies": [
        "ms-python.python",
        "gap.gap",
        "reiniscirpons.gaptst"
    ],
    "capabilities": {
        "virtualWorkspaces": {
            "supported": false,
            "description": "Virtual Workspaces are not supported with the gaplint linter."
        }
    },
    "activationEvents": [
        "onLanguage:gap",
        "workspaceContains:**/*.g",
        "workspaceContains:**/*.gi",
        "workspaceContains:**/*.gd",
        "onLanguage:gaptst"
    ],
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool source-map --config ./webpack.config.js",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "format-check": "prettier --check 'src/**/*.ts' 'build/**/*.yml' '.github/**/*.yml'",
        "test": "node ./out/test/runTest.js",
        "vsce-package": "vsce package -o gaplint.vsix"
    },
    "contributes": {
        "configuration": {
            "properties": {
                "gaplint.args": {
                    "default": [],
                    "markdownDescription": "%settings.args.description%",
                    "items": {
                        "type": "string"
                    },
                    "scope": "resource",
                    "type": "array"
                },
                "gaplint.cwd": {
                    "default": "${workspaceFolder}",
                    "markdownDescription": "%settings.cwd.description%",
                    "scope": "resource",
                    "type": "string",
                    "examples": [
                        "${workspaceFolder}/src",
                        "${fileDirname}"
                    ]
                },
                "gaplint.enabled": {
                    "default": true,
                    "markdownDescription": "%settings.enabled.description%",
                    "scope": "resource",
                    "type": "boolean"
                },
                "gaplint.ignorePatterns": {
                    "default": [],
                    "markdownDescription": "%settings.ignorePatterns.description%",
                    "items": {
                        "type": "string"
                    },
                    "scope": "resource",
                    "type": "array",
                    "uniqueItems": true,
                    "examples": [
                        [
                            "no_lint/*.gi",
                            "do_not_lint_this_folder/**/*.g"
                        ]
                    ]
                },
                "gaplint.importStrategy": {
                    "default": "useBundled",
                    "markdownDescription": "%settings.importStrategy.description%",
                    "enum": [
                        "useBundled",
                        "fromEnvironment"
                    ],
                    "enumDescriptions": [
                        "%settings.importStrategy.useBundled.description%",
                        "%settings.importStrategy.fromEnvironment.description%"
                    ],
                    "scope": "resource",
                    "type": "string"
                },
                "gaplint.interpreter": {
                    "default": [],
                    "markdownDescription": "%settings.interpreter.description%",
                    "scope": "resource",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "gaplint.lintOnChange": {
                    "default": false,
                    "markdownDescription": "%settings.lintOnChange.description%",
                    "scope": "machine",
                    "type": "boolean",
                    "tags": [
                        "experimental"
                    ]
                },
                "gaplint.path": {
                    "default": [],
                    "markdownDescription": "%settings.path.description%",
                    "scope": "resource",
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "examples": [
                        [
                            "~/global_env/gaplint"
                        ],
                        [
                            "~/.env/python",
                            "-m",
                            "gaplint"
                        ]
                    ]
                },
                "gaplint.severity": {
                    "default": {
                        "error": "Error",
                        "warning": "Warning"
                    },
                    "additionalProperties": {
                        "type": "string",
                        "enum": [
                            "Error",
                            "Hint",
                            "Information",
                            "Warning"
                        ]
                    },
                    "markdownDescription": "%settings.severity.description%",
                    "scope": "resource",
                    "type": "object"
                },
                "gaplint.showNotifications": {
                    "default": "off",
                    "markdownDescription": "%settings.showNotifications.description%",
                    "enum": [
                        "off",
                        "onError",
                        "onWarning",
                        "always"
                    ],
                    "enumDescriptions": [
                        "%settings.showNotifications.off.description%",
                        "%settings.showNotifications.onError.description%",
                        "%settings.showNotifications.onWarning.description%",
                        "%settings.showNotifications.always.description%"
                    ],
                    "scope": "machine",
                    "type": "string"
                }
            }
        },
        "commands": [
            {
                "title": "%command.restartServer%",
                "category": "gaplint linter",
                "command": "gaplint.restart"
            }
        ]
    },
    "dependencies": {
        "@vscode/python-extension": "^1.0.6",
        "fs-extra": "^11.3.2",
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/chai": "^5.2.2",
        "@types/fs-extra": "^11.0.4",
        "@types/glob": "^9.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/sinon": "^17.0.4",
        "@types/vscode": "1.78.0",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@typescript-eslint/parser": "^8.45.0",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^3.6.2",
        "chai": "^6.2.0",
        "eslint": "^9.36.0",
        "glob": "^11.0.3",
        "mocha": "^11.7.2",
        "prettier": "^3.6.2",
        "sinon": "^21.0.0",
        "ts-loader": "^9.5.4",
        "typemoq": "^2.1.0",
        "typescript": "^5.9.2",
        "webpack": "^5.101.3",
        "webpack-cli": "^6.0.1",
        "tar-fs": "^3.1.1"
    }
}
